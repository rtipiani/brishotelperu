<script>
  document.addEventListener("DOMContentLoaded", () => {
    const slider = document.getElementById("reviewsSlider") as HTMLElement;
const dots = document.querySelectorAll<HTMLButtonElement>(".dot");
let currentIndex = 0;

function showSlide(index: number) {
  slider.style.transform = `translateX(-${index * 100}%)`;
  dots.forEach((dot, i: number) => {
    dot.classList.toggle("bg-gray-800", i === index);
    dot.classList.toggle("bg-gray-400", i !== index);
  });
}

dots.forEach((dot: HTMLButtonElement, i: number) => {
  dot.addEventListener("click", () => {
    currentIndex = i;
    showSlide(currentIndex);
  });
});

// autoplay cada 5s
setInterval(() => {
  currentIndex = (currentIndex + 1) % dots.length;
  showSlide(currentIndex);
}, 5000);

// inicial
showSlide(0);
  });
</script>
