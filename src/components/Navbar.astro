<!-- Fondo oscuro al abrir el menú -->
<div id="overlay" class="fixed inset-0 bg-black bg-opacity-50 hidden z-40"></div>

<!-- Script para abrir/cerrar -->
<script>
  	const sidebar = document.getElementById('sidebar') as HTMLElement | null;
	const overlay = document.getElementById('overlay') as HTMLElement | null;
	const menuButton = document.getElementById('menu-button') as HTMLElement | null;
	const closeButton = document.getElementById('close-button') as HTMLElement | null;

	if (sidebar && overlay && menuButton && closeButton) {
  		menuButton.addEventListener('click', () => {
    		sidebar.classList.remove('-translate-x-full');
    		overlay.classList.remove('hidden');
  		});

  		closeButton.addEventListener('click', () => {
    		sidebar.classList.add('-translate-x-full');
    		overlay.classList.add('hidden');
  		});

  		overlay.addEventListener('click', () => {
    		sidebar.classList.add('-translate-x-full');
    		overlay.classList.add('hidden');
  		});
	}
</script>