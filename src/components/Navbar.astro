<!-- Menú lateral (off-canvas) -->
<div id="sidebar" class="fixed top-0 left-0 w-64 h-full bg-[#f2f3f4] shadow-lg transform -translate-x-full transition-transform duration-300 z-50">
  	<div class="p-6 flex flex-col gap-4">
    	<button id="close-button" class="self-end text-gray-600">
      		<svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
